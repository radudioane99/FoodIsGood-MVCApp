@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">

    <style>
        .container {
            position: relative;
            font-family: Arial;
        }

        .text-block {
            position: absolute;
            bottom: 20px;
            right: 20px;
            background-color: black;
            color: white;
            padding-left: 20px;
            padding-right: 20px;
        }

        .logo-small {
            color: #f4511e;
            font-size: 50px;
        }

        .logo {
            color: #f4511e;
            font-size: 200px;
        }
        .container img {
            vertical-align: middle;
        }
        .glyphicon {
            font-size: 20px;
            margin-bottom: 20px;
            color: #f4511e;
        }
        .content {
            position: absolute;
            bottom: 0;
            background: rgb(0, 0, 0); /* Fallback color */
            background: rgba(0, 0, 0, 0.5); /* Black background with 0.5 opacity */
            color: #f1f1f1;
            width: 97.4%;
            padding: 20px;
        }
    </style>


    <div class="container">
        <img src="/content/images/cover5.png" style="width:100%">
        <div class="content">
            <h4>Healthy food</h4>
            <p>Healthy life</p>
        </div>
    </div>

    <div class="jumbotron">
        <h1>
            Food Is Good - Home page </h1>
    <p class="lead">Mens sana in corpore sano</p>

    <button class="btn btn-group btn-block">@Html.ActionLink("Offers", "Index", "Offers")</button>
</div>

    <!-- First row with `what you ll find there`-->
    <div class="row">
        <div id="portfolio" class="container-fluid text-center bg-grey">

            <h4>What you'll find here</h4>
            <br /><br />
            <div class="row text-center slideanim">

                <div class="container-fluid text-center bg-grey">


                    <div class="row text-center">
                        <div class="col-sm-4">
                            <div class="thumbnail">
                                <img src="/Content/Images/first_page1.jpg" alt="Paris">
                                <br />
                                <p><strong>Fruits</strong></p>
                                <p>Fresh, without artificial ingredients</p>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="thumbnail">
                                <img src="/Content/Images/vegetables2.jpg" alt="New York"><br />
                                <p><strong>Vegetables</strong></p>
                                <p>Grown probably by your neighbours</p>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="thumbnail">
                                <img src="/Content/Images/fundal_contact.jpg" alt="San Francisco"><br />
                                <p><strong>The cleanest market</strong></p>
                                <p>Local producers for local customers</p>
                            </div>
                        </div>
                    </div>

                </div><br>

            </div>
            <!-- end of the first section-->
            <!-- Offers - click on them display text - second section-->


        </div>


        <div class="container-fluid text-center">
