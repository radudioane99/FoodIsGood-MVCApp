@model foodisgood.Models.ReviewModel
@{
    ViewBag.Title = "Rewiews";
}

<h2>Rewiews</h2>
<div class="row">
    @if (Model.rewiews.Any())
    {
        
        foreach (var item in Model.rewiews)
        {

            <div class="col-sm-3">
                <div class="thumbnail">
                    <div class="thumbnail">
                        <div>
                            <p><strong>Date posted:</strong> @Html.DisplayFor(modelItem => item.date)</p>
                        </div>
                    </div>
                    <div class="text-justify thumbnail">
                        <div>
                            <p style=" text-align:justify;max-width: 200px;">   <strong>Review:</strong> @Html.DisplayFor(modelItem => item.Text)</p>
                        </div>
                    </div>
                    <div class="text-justify thumbnail">
                        <div>
                            <p style=" text-align:justify;max-width: 200px;">   <strong>First Name:</strong> @Html.DisplayFor(modelItem => item.ReviewerFirstname)</p>
                        </div>
                    </div>
                    <div class="text-justify thumbnail">
                        <div>
                            <p style=" text-align:justify;max-width: 200px;">   <strong>Last Name:</strong> @Html.DisplayFor(modelItem => item.ReviewerLastname)</p>
                        </div>
                    </div>

                    <div class="thumbnail ">
                        <div>
                            <p><strong>Stars given out of 5:</strong></p>
                            @for (int i = 1; i <= item.note; i++)
                            {
                                <span>&#9733;</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <span>There are no rewiews for this user yet.</span>
    }
</div>
<div class="bg-img">
    <div class="container2">
        <h5>Add your rewiew:</h5>
        @using (Html.BeginForm("Index", "Rewiews", FormMethod.Post))
        {

            <p>Text:</p>
            <input class="form-control" type="text" name="Text" />
            <p>Note(1-5):</p>
            <input class="form-control" type="text" name="Note" />
            <div class="hide">
                <p>Id:<p>
                <p><input type="text" name="Id" value=@Model.userId /></p>
            </div>


            <br />
            <input class="btn btn-default" type="submit" value="Submit" />
        }


        <br />
        <button class="btn btn-default">
            @Html.ActionLink("Back", "Index", "Offers", null, null)
        </button>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>


    .bg-img {
        /* The image used */
        background-image: url("/content/Images/vegetables.jpg");
        min-height: 400px;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
    }

    /* Add styles to the form container */
    .container2 {
        position: relative;
        right: 0;
        top: 15px;
        margin: 30px;
        max-width: 300px;
        padding: 26px;
        background-color: white;
        opacity: 0.8;
        border-radius: 15px;
    }

        .container2:hover {
            opacity: 1.0;
        }

    /* Full-width input fields */
    input[type=text], input[type=password] {
        width: 100%;
        padding: 15px;
        margin: 5px 0 22px 0;
        border: none;
        background: #f1f1f1;
    }

        input[type=text]:focus, input[type=password]:focus {
            background-color: #ddd;
            outline: none;
        }

    /* Set a style for the submit button */


    .btn:hover {
        opacity: 1;
    }
</style>