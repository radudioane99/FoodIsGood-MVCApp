@model foodisgood.Models.Order

@{
    ViewBag.Title = "Delete";
}
<style>


    .bg-img {
        /* The image used */
        background-image: url("/content/Images/fundal_contact.jpg");
        min-height: 580px;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
    }

    /* Add styles to the form container */
    .container2 {
        position: relative;
        right: 0;
        top: 15px;
        margin: 30px;
        max-width: 600px;
        padding: 26px;
        background-color: white;
        opacity: 0.8;
        border-radius: 15px;
    }

        .container2:hover {
            opacity: 1.0;
        }

    /* Full-width input fields */
    input[type=text], input[type=password] {
        width: 100%;
        padding: 15px;
        margin: 5px 0 22px 0;
        border: none;
        background: #f1f1f1;
    }

        input[type=text]:focus, input[type=password]:focus {
            background-color: #ddd;
            outline: none;
        }

    /* Set a style for the submit button */


    .btn:hover {
        opacity: 1;
    }
</style>

<h2>Delete</h2>
<div class="bg-img">
    <div class="container2">
        <h3>Are you sure you want to delete this order?</h3>
        <div>
            
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Offer.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Offer.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.BuyerUserID)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BuyerUserID)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DesiredQuantity)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DesiredQuantity)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> 
                    <div class="btn btn-default">  @Html.ActionLink("Back to List", "Index")</div>
                </div>
            }
        </div>
    </div>
</div>