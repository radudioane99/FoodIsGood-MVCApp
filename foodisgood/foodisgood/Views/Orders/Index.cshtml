@using foodisgood.Models;
@model IEnumerable<foodisgood.Models.Order>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Offer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offer.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuyerUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Offer.PriceUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DesiredQuantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Offer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyerUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer.PriceUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesiredQuantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
